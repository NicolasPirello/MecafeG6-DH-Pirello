</head>
<body class="bodyHome">

    <!-- Cabecera -->
    <%- include("../partials/header") %>

    <!-- Contenido -->
    <section class="generalHome">  
        <div class="container_users">
            <%- include("../partials/menuAdmin") %>
            <div class="container_detail_view_admin"> 
                <p class="title">Editar Tipo Molienda</p>               
            </div>
            <div class="container_detail_view_admin">

                <div class="containerUpdateTypeGrinding__containerForm">
            
                    <form action="/type-grinding/edit/<%= typeGrinding.id %>" method="POST" class="updateTypeGrinding__containerForm">

                        <div class="typeGrindingForm_typeGrinding_titleForm">
                            <h2>Â¿Necesitas editar un tipo de molienda?</h2>
                            <h3>Adelante! ðŸ˜€</h3>
                        </div>

                        <div>
                            <label for="nameTypeGrinding" class="updateTypeGrinding_labelBox">Nombre del tipo de molienda:</label>
