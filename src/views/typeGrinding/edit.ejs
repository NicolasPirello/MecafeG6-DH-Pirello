                            type="text" 
                            name="nameTypeGrinding" 
                            class="updateTypeGrinding_inputBox" 
                            value="<%= typeGrinding.name %>" 
                            id="nameTypeGrinding">

                            <!-- validaciones Back -->
                            <% if(locals.errorMessage && errorMessage.nameTypeGrinding){ %>
                                <p class="register__formError_grinding">
                                    <%= errorMessage.nameTypeGrinding.msg %> 
                                </p>
                            <% } %> 
                        </div>

                        <section class="btn_updateTypeGrinding">
                            <button type="submit" class="submit">Enviar</button>
                            <button type="reset" class="reset">Restablecer</button>
                        </section>
                    </form>
                </div>
            </div>
        </div> 
       
    </section>
    <!-- Pie de Pagina -->
    <%- include("../partials/footerNico") %>
