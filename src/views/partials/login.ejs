<div class="login__container modal__container" id="modalLogin" <%= locals.errorsLogin || locals.openLogin ? 'active' : ''%> >

    <div class="modal__header">
        <h2>Ingresar</h2>
        <a onclick="closeModal('modalLogin')"><i class="fas fa-times"></i></a>
    </div>

    <div class="registerForm__container-form">
    
        <form action="/user/login" method="post" id="formLogin" class="registerForm__form-login">

            <input type="hidden" name="route" id="inputRouteLogin" />    

            <div class="form-group form-group-email">
                <!-- -->

                <input type="email" name="email" class="registerForm__formInput-login" id="emailLogin" placeholder=" " value="">
                <label for="email" class="registerForm__formLabel-login">Ingresa tu Email:</label>
                
                <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.email ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.email ? locals.errorsLogin.email.msg : ''%></p>
            </div>


            <div class="form-group form-group-pass">

                <input type="password" name="password" class="registerForm__formInput-login" id="passLogin" placeholder=" " value="">
                <label for="password" class="registerForm__formLabel-login">Ingresa tu Contraseña:</label>

                <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.password ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.password ? locals.errorsLogin.password.msg : ''%></p>
                <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.errorPass ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.errorPass ? locals.errorsLogin.errorPass : ''%></p>           

            </div>

            <div class="LoginContainerOne">

                <div class="check_login">
                    <p>Recordarme</p>
                    <input type="checkbox" id="" name="remember" value="">
                </div>

                <a class="" href="http://">¿Olvidaste tu contraseña?</a>

            </div>


            
            <div class="login__containerNoInput borderBottomLogin">
                <input type="submit" value="Ingresar">
            </div>


            <p class="LoginContainerTwo">¿No estás registrado?
                <a class="" href="/user/register">Crear Cuenta</a>
            </p> 

            
            <div class="login_logo">
                <img src="/img/Login/logoMecafeLogin.png" class="logo" alt="Logo de Mecafe"/>
            </div>

            <div class="login__containerNoInput">

            </div>
            
        </form>

    </div>

</div>